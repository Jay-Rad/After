@page
@model After.Pages.CharacterCreateModel
@{
    ViewData["Title"] = "Create Character";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h2>Create New Character</h2>

<div class="row">
    <div asp-validation-summary="All" class="col-sm-12 text-danger"></div>
</div>
<div class="row">
    <div class="col-sm-6">
        <h4>
            Character Name
        </h4>
        <form id="characterCreatForm" method="post">
        </form>
        <input asp-for="Input.CharacterName" form="characterCreatForm" class="form-control" placeholder="Enter a character name..." />
        <span asp-validation-for="Input.CharacterName" class="text-danger"></span>
        <input type="hidden" asp-for="Input.Color" value="gray" />
    </div>

</div>

<div class="row margin-top-md">
    <div class="col-sm-6">
        <h4>
            Soul Color
        </h4>
        <div id="divCharacterColor">
            <div>
                <label style="color:red">Red:</label>
                <br />
                <input id="inputRed" type="range" min="0" max="255" value="125" class="form-control" onchange="evaluateColor()" />
            </div>
            <div>
                <label style="color:green">Green:</label>
                <br />
                <input id="inputGreen" type="range" min="0" max="255" value="125" class="form-control" onchange="evaluateColor()" />
            </div>
            <div>
                <label style="color:blue">Blue:</label>
                <br />
                <input id="inputBlue" type="range" min="0" max="255" value="125" class="form-control" onchange="evaluateColor()" />
            </div>
            <div class="margin-top-md">
                <label>Presets:</label>
                <br />
                <select class="form-control" id="selectColor" onchange="colorSelected()" style="width:100%"></select>
            </div>
        </div>
        <div class="text-right margin-top-md">
            <button type="submit" form="characterCreateForm" class="btn btn-primary" onclick="submitColor()">Save</button>
        </div>
    </div>
    <div class="col-sm-5 col-sm-offset-1">
        <h5>
            Preview
        </h5>
        <div id="previewDiv">
            <canvas id="previewCanvas"></canvas>
        </div>
    </div>
</div>

